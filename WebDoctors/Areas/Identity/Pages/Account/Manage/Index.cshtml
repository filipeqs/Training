@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<hr/>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-12">
        <form id="profile-form" method="post">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Profile</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <strong><i class="fas fa-user-alt mr-1"></i> Username</strong>
                    <p class="text-muted">
                        <div class="form-group">
                            <input asp-for="Username" class="form-control" disabled>
                        </div>
                    </p>

                    <hr>
                    <strong><i class="fas fa-user mr-1"></i> First Name</strong>
                    <p class="text-muted">
                        <div class="form-group">
                            <input asp-for="Input.FirstName" class="form-control">
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                    </p>

                    <hr>
                    <strong><i class="fas fa-user mr-1"></i> Last Name</strong>
                    <p class="text-muted">
                        <div class="form-group">
                            <input asp-for="Input.LastName" class="form-control">
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                    </p>

                    <hr>
                    <strong><i class="fas fa-birthday-cake mr-1"></i> Date Of Birth</strong>
                    <p class="text-muted">
                        <div class="form-group">
                            <input asp-for="Input.DateOfBirth" class="form-control">
                            <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
                        </div>
                    </p>

                    <hr>
                    <strong><i class="fas fa-birthday-cake mr-1"></i> Phone Number</strong>
                    <p class="text-muted">
                        <div class="form-group">
                            <input asp-for="Input.PhoneNumber" class="form-control">
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                    </p>
                </div>
                <!-- /.card-body -->
            </div>

            <button id="update-profile-button" type="submit" class="btn btn-success btn-block">Update</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}