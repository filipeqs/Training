@model IEnumerable<WebDoctors.Models.PersonVM>

@{
    ViewData["Title"] = "Patients";
}

<h1>Patients</h1>
<hr/>
<table id="tblData" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info" title="Details">
                    <i class="fa fa-info-circle" aria-hidden="true"></i>
                </a>
                <a asp-controller="Appointments" asp-action="Create" asp-route-id="@item.Id" class="btn btn-primary">Add Appointment</a>
            </td>
        </tr>
}
    </tbody>
</table>
