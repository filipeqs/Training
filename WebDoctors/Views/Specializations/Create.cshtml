@model WebDoctors.Data.Specialization

@{
    ViewData["Title"] = "Create Specialization";
}

<div class="row">
    <div class="col-md-12">
        <hr/>
        <form asp-action="Create">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Create Specialization</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <strong><i class="fas fa-book-medical mr-1"></i> Name</strong>
                    <p class="text-muted">
                        <div class="form-group">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </p>

                    <hr>
                    <strong><i class="fas fa-book mr-1"></i> Description</strong>
                    <p class="text-muted">
                        <div class="form-group">
                            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </p>

                    <hr>
                    <strong><i class="fas fa-star mr-1"></i> Show on Front Page?</strong>
                    <p class="text-muted">
                        <div class="icheck-success d-inline">
                            <input type="checkbox" asp-for="Featured" id="checkboxSuccess1">
                            <label for="checkboxSuccess1">
                            </label>
                        </div>
                    </p>
                </div>
                <!-- /.card-body -->
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success btn-block" />
            </div>
        </form>
        <div>
            <a asp-action="Index" class="btn btn-outline-secondary btn-block">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
